{
  "name": "safety-slider",
  "version": "0.8.0",
  "description": "An efficient, accessible, and framework independent slider.",
  "author": "Macallan Camara",
  "repository": {
    "type": "git",
    "url": "https://github.com/Macinto5h/safety-slider"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/safety-slider/safety-slider.esm.js",
  "files": [
    "dist/",
    "loader/",
    "src/",
    "www/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e --coverage",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "lint:typescript": "eslint src/**/*{.ts,.tsx}",
    "lint:css": "npx stylelint 'src/components/**/*.css'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@stencil/core": "2.14.2",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@stencil/eslint-plugin": "0.4.0",
    "@stencil/postcss": "2.1.0",
    "@types/chance": "^1.1.3",
    "@types/jest": "27.4.1",
    "autoprefixer": "10.4.4",
    "chance": "^1.1.8",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "27.5.1",
    "jest-cli": "27.5.1",
    "lint-staged": "^12.4.1",
    "prettier": "2.6.2",
    "puppeteer": "10.0.0",
    "stylelint": "14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "25.0.0",
    "stylelint-no-unsupported-browser-features": "5.0.3"
  },
  "license": "MIT",
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 63",
    "Firefox ESR",
    "iOS >= 10.1",
    "Safari >= 10.1",
    "not Explorer <= 11",
    "not OperaMini all"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignorePartialSupport": true,
          "severity": "warning"
        }
      ],
      "selector-class-pattern": "[a-z]+"
    }
  }
}
